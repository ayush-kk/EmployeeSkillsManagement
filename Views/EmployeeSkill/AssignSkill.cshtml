@using EmployeeSkillManagement.Models
@model EmployeeSkillManagement.Models.EmployeeSkill

<div class="container mt-5">
    <h1 class="display-6">Assign Skill</h1>

    <form asp-action="AssignSkill" method="post">
        <div class="form-group">
            <label asp-for="SkillId">Select Skill</label>
            <select asp-for="SkillId"
                asp-items="new SelectList(Model.AvailableSkills, nameof(Skill.Id), nameof(Skill.SkillName))"
                class="form-control">
                <option value="">-- Select Skill --</option>
            </select>
            <span asp-validation-for="SkillId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Choose Skill Type</label>
            <div class="form-check">
                <input type="radio" asp-for="IsPrimary" class="form-check-input" value="true" />
                <label class="form-check-label">Primary Skill</label>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="IsPrimary" class="form-check-input" value="false" />
                <label class="form-check-label">Secondary Skill</label>
            </div>
            <span asp-validation-for="IsPrimary" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rating">Rating</label>
            <input asp-for="Rating" class="form-control" type="number" min="1" max="10" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="YearsOfExperience">Years of Experience</label>
            <input asp-for="YearsOfExperience" class="form-control" type="number" min="1" max="20" />
            <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="EmployeeId" />

        @* <div class="text-danger">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div> *@

        <button type="submit" class="btn btn-primary">Assign Skill</button>
    </form>
</div>
