@model EmployeeSkillManagement.Models.Skill

<div class="container mt-5">
    <h1 class="display-6">Edit Skill</h1>

    <div class="row">
        <div class="col-6">
            <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="mt-4">
                <div class="form-group">
                    <label asp-for="SkillName">Skill Name:</label>
                    <input asp-for="SkillName" class="form-control" />
                    <span asp-validation-for="SkillName" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">Save Changes</button>
            </form>
        </div>
    </div>
</div>
