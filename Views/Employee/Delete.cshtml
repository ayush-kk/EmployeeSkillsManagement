@model EmployeeSkillManagement.Models.Employee

<div class="container mt-5" style="max-width: 600px; margin: auto;">
    <h2 style="color: #333;">Delete Employee</h2>
    <h3 style="color: #d9534f;">Are you sure you want to delete this employee?</h3>
    <div>
        <br />
        <br />
        <h4 style="color: #333;">Employee Details</h4>
        <hr style="border-color: #d9534f;" />
        <dl class="row">
            <dt class="col-sm-3" style="font-weight: bold;">First Name:</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt class="col-sm-3" style="font-weight: bold;">Designation:</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Designation)
            </dd>
        </dl>

        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>

        </form>
    </div>
</div>
